<section class="row">
  <h4>Log In:</h4>

  {{#if loginMessage}}
    <p class="alert">{{loginMessage}}</p>
  {{/if}}

  <form action="/user/login" method="POST" class="auth-form">
    <p class="input-field">
      <input type="email" name="email" placeholder="Email">
    </p>
    <p class="input-field">
      <input type="password" name="password" placeholder="Password">
    </p>

    <p class="input-field">
      <input type="submit" value="Log In" class="btn waves-effect waves-light">
    </p>
  </form>
</section>
