
<div class='myteam'>
  <h2 class='teamheader'>Your Team</h2>
    {{#if user.Team}}
      <div class='players'>
        {{#each user.Team}}
          {{> 'player'}}
        {{/each}}
      </div>
    {{else}}
      <p class='noplayers'>No one on your team yet. Get to recruiting!</p>
    {{/if}}
      <p  class='pagelinksparent'><a class ='pagelink' href='/basketball/new'>Add a Player</a></p>
</div>
