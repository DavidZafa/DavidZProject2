
  <h2 class='addplayer'>Add a Player</h2>

  <form action="/basketball/search" method="POST">
      <p class='input-field'>
        <input type='text' name="title" placeholder='Name of Player'>
      </p>
      <p class='input-field'>
        <input type='submit' value='Search'>
      </p>

      <p>
        <img class='headshot'{{Basketball.image}}>
        <p class='playername'>{{Basketball.name}}</p>
        <p class='playernumber'{{Basketball.number}}</p>
        <p class='playerteam'{{Basketball.team}}</p>
      </p>
</form>
