<p class="card">
  {{> 'basketball'}}
</p>
<div class = 'search'>
<p class='playername'>{{basketball.player.name}}</p>
<p class='playerposition'>{{basketball.player.position}}</p>
<p class='playerage'>{{basketball.player.age}}</p>
<p class='playerteam'>{{basketball.player.team}}</p>
<div class="card">
  <div class="card-content">
    <form method="POST" action="/basketball/{{id}}?_method=PUT" class="row">
      <p class="input-field inline col s10">
        <label for="content"></label>
        <input type="text" name="content" id="">
      </p>
      <p class="input-field inline col s2">
        <input class="btn" type="submit" value="Submit">
      </p>
    </form>
  </div>
</div>
</div>
